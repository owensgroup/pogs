{
    "solvers": {
        "multi_dense" : {
            "arg_template":
            "--seed {seed} --type {typ} --m {m} --n {n}",
            "directory": "~/repos/pogs/scripts/benchmark/src/dense/"
        },
        "single_dense" : {
            "arg_template":
            "--seed {seed} --type {typ} --m {m} --n {n}",
            "directory": "~/repos/pogs/examples/cpp/"
        },
        "single_sparse" : {
            "arg_template":
            "--seed {seed} --type {typ} --m {m} --n {n} --nnz {nnz}",
            "directory": "~/repos/pogs/examples/cpp_sp/"
        }
    },
    "configs": {
        "single_d" : {
            "solver": "single_dense",
            "run": "./run",
            "resources": "nodes=1:k40:ppn=1"
        },
        "row_2_d" : {
            "solver": "multi_dense",
            "run": "mpirun -np 2 ./run --schedule schedule_gpu2.json",
            "resources": "nodes=1:k40x4:ppn=4"
        },
        "row_4_d" : {
            "solver": "multi_dense",
            "run": "mpirun -np 4 ./run --schedule schedule_gpu4.json",
            "resources": "nodes=1:k40x4:ppn=4"
        },
        "row_8_d" : {
            "solver": "multi_dense",
            "run": "mpirun -np 8 ./run --schedule schedule_gpu8.json",
            "resources": "nodes=2:k40x6:ppn=6"
        },
        "row_16_d" : {
            "solver": "multi_dense",
            "run": "mpirun -np 16 ./run --schedule schedule_gpu16.json",
            "resources": "nodes=3:k40x6:ppn=6"
        },
        "row_32_d" : {
            "solver": "multi_dense",
            "run": "mpirun -np 32 ./run --schedule schedule_gpu32.json",
            "resources": "nodes=6:k40x6:ppn=6"
        },
        "row_64_d" : {
            "solver": "multi_dense",
            "run": "mpirun -np 64 ./run --schedule schedule_gpu64.json",
            "resources": "nodes=11:k40x6:ppn=6"
        }
    },
    "tests": {
        "lasso_mn_d_1": {
            "type": "lasso",
            "params": [
                {"m": 1024, "n": 8192},
                {"m": 2048, "n": 16384},
                {"m": 4096, "n": 32768},
                {"m": 8192, "n": 65536},
                {"m": 16384, "n": 131072},
                {"m": 32768, "n": 262144}
            ]
        },
        "lp_mn_d_1": {
            "type": "lp",
            "params": [
                {"n": 1024, "m": 8192},
                {"n": 2048, "m": 16384},
                {"n": 4096, "m": 32768},
                {"n": 8192, "m": 65536},
                {"n": 16384, "m": 131072},
                {"n": 32768, "m": 262144}
            ]
        }
    }
}
